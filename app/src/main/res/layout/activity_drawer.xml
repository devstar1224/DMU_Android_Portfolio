<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/drawer"
android:layout_width="135dp"
android:layout_height="match_parent"
android:layout_gravity="left"
android:background="@color/main_top"
android:orientation="vertical"
android:padding="5dp"
    >

    <Button
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="Home"
        android:textSize="16dp"
        android:textAlignment="center"
        android:textColor="@color/rollMenuTextEnable"
        android:background="@color/rollMenuBackgroundEnable"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="Project"
        android:textSize="16dp"
        android:textAlignment="center"
        android:textColor="@color/rollMenuTextDisable"
        android:background="@color/rollMenuBackgroundDisable"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="Contect"
        android:textSize="16dp"
        android:textAlignment="center"
        android:textColor="@color/rollMenuTextDisable"
        android:background="@color/rollMenuBackgroundDisable"
        />

</LinearLayout>
